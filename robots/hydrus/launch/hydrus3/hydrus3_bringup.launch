<?xml version="1.0"?>
<launch>
  ###########  launch config  ###########
  <arg name="real_machine" default="True" />
  <arg name="simulation" default="False" />
  <arg name="control_mode" default="0" /> <!-- pos mode: 0, vel mode: 3, att mode: 4 -->
  <arg name="type" default="quad" />
  <arg name="estimate_mode"  default= "0" />
  <arg name="headless" default="True" />

  ###########  UAV Config  ###########
  # HYDRUS = 16 # 0x10, hydrus type with  4dof underactuated property
  <param name="/uav_info/uav_model" value= "16" />

  ###########  Motor Config  ###########
  <rosparam file="$(find hydrus)/config/hydrus3/MotorInfo.yaml" command="load" />

  ###########  Base Platform  ###########
  <node pkg="aerial_robot_base" type="aerial_robot_base_node" name="aerial_robot_base_node" output="screen" >

    ###########  Basic Param  ###########

    # EGOMOTION_ESTIMATE = 0
    # EXPERIMENT_ESTIMATE = 1. for unstable mocap, use this mode
    # GROUND_TRUTH = 2
    <param name="estimator/estimate_mode" value= "$(arg estimate_mode)" if="$(arg real_machine)"/>
    <param name="estimator/estimate_mode" value= "2" if="$(arg simulation)" />

    # World Pos Control Mode: 0
    # Local Vel Control Mode: 3
    # Attitude Control Mode: 4
    <param name="navigator/xy_control_mode" value="$(arg control_mode)"/>

    <param name="simulation" value="$(arg simulation)" /> <!-- for sensor plugin -->
    <param name="param_verbose" value= "true" />
    <param name="main_rate" type="double" value="40"/>

    ###########  Sensor Fusion  ###########
    <rosparam file="$(find hydrus)/config/hydrus3/SensorFusion.yaml" command="load" if="$(arg real_machine)"/>
    <rosparam file="$(find hydrus)/config/hydrus3/SensorSimulation.yaml" command="load" if="$(arg simulation)"/>
    ###########  Differential Flatness PID Control  ###########
    <rosparam file="$(find hydrus)/config/hydrus3/$(arg type)/DifferentialFlatnessPidControlConfig.yaml" command="load" />
    ###########  Teleop  ###########
    <rosparam file="$(find hydrus)/config/hydrus3/TeleopNavigationConfig.yaml" command="load" />
  </node>

  ###########  Sensors  ###########
  <include file="$(find aerial_robot_base)/launch/sensors/onboard_sensors.launch" >
    <arg name="simulation" value="$(arg simulation)" />
  </include >

  ###########  Dynamixel  ###########
  <include file="$(find hydrus)/launch/hydrus3/hydrus3_dynamixel_bridge.launch" if="$(arg real_machine)" >
    <arg name="type" value="$(arg type)" />
  </include>


  ###########  Robot Model  ###########
  <include file="$(find hydrus)/launch/robot_model.launch" >
    <arg name="model" value="hydrus3"/>
    <arg name="type" value="$(arg type)" />
    <arg name="headless" value="$(arg headless)" />
    <arg name="need_joint_state" value="false" if="$(arg real_machine)"/>
    <arg name="need_joint_state" value="false" if="$(arg simulation)"/>
    <arg name="description_mode" value="gazebo" if="$(arg simulation)"/>
  </include >

  ###########  Transform Control  ###########
  <node pkg="hydrus" type="transform_control_node" name="hydrus3"  output="screen" >
    <rosparam file="$(find hydrus)/config/hydrus3/$(arg type)/Hydrus.yaml" command="load" />
    <param name="kinematic_verbose" value="false" />
    <param name="control_verbose" value="false" />
  </node>

  ########## Simulation in Gazebo #########
  <rosparam file="$(find hydrus)/config/hydrus3/$(arg type)/SimulationControl.yaml" command="load"/>
  <include file="$(find aerial_robot_simulation)/launch/simulation.launch" if = "$(arg simulation)" >
    <arg name="model" default="hydrus3" />
    <arg name="gui" default="false" if="$(arg headless)" />
    <arg name="headless" default="$(arg headless)" />
    </include>

</launch>



